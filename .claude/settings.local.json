      "Bash(claude:*)",
      "Bash(ls:*)",
      "Bash(python -m json.tool:*)",
      "Bash(findstr:*)",
      "Bash(cd:*)",
      "Bash(xargs:*)",
      "Skill(code-architecture-analysis)",
      "Bash(git rev-parse:*)",
      "Bash(if [ ! -d \"../.zcf/Love\" ])",
      "Bash(then mkdir -p \"../.zcf/Love\")",
      "Bash(fi)",
      "Bash(if [ -d \"../.zcf/Love/prd23\" ])",
      "Bash(then echo \"❌ 目录已存在 ../.zcf/Love/prd23\")",
      "Bash(exit:*)",
      "Bash(git worktree:*)",
      "Bash(if [ -f \".env\" ])",
      "Bash(then cp \".env\" \"../.zcf/Love/prd23/.env\")",
      "mcp__grok-search__get_config_info",
      "mcp__grok-search__toggle_builtin_tools",
      "mcp__grok-search__web_search",
      "mcp__grok-search__switch_model",
      "Bash(tasklist:*)",
      "WebSearch",
      "mcp__grok-search__web_fetch",
      "Bash(then ls -la \"../.zcf/Love/prd23\")",
      "Bash(else echo \"prd23 worktree 目录不存在或不可访问\")",
      "Bash(git merge:*)",
      "Bash(git branch:*)",
      "Skill(code-deep-research)",
      "Skill(code-question-refiner)",
      "Bash(powershell.exe -ExecutionPolicy Bypass -File \".claude/hooks/read-rules.ps1\")",
      "Bash(powershell.exe -ExecutionPolicy Bypass -File \".claude/hooks/update-task-log.ps1\"*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \".claude/hooks/read-rules.ps1\"",
            "timeout": 30,
            "statusMessage": "读取Rules文档..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|Read",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \".claude/hooks/update-task-log.ps1\"",
            "timeout": 10,
            "statusMessage": "更新任务日志..."
          }
        ]
      }
    ]
  }
}
